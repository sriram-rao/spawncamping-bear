<!DOCTYPE html>
<html>
<head>
  <title>Dota2</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar navbar-fixed-top">
	   <div class="navbar-inner">
		     <div class="container">
		     	<a class="brand" href= "/">Dota2Alchemy</a>
		     	 <ul class="nav pull-right" id="main-menu-right">
		     	 	<% if @current_user.nil? %>
		     	 	<li> <%= link_to(image_tag("http://cdn.steamcommunity.com/public/images/signinthroughsteam/sits_small.png"),"/auth/steam")%> </li>
		     	 	<% else %>
		     	 	<li>   <%=  link_to "#{@current_user.name}", profile_path  %> </li>
		     	 	<li><%= link_to "Logout", signout_path  %> </li>
		     	 	<% end %>
		     	 </ul>

		     </div>
		 </div>
	</div>
<div class="container">

<% if flash[:notice] %>
<div class = "alert alert-success"> <%= flash[:notice] %> </div>
<% end %>
<div class = "content">
<%= yield %>
</div>

</body>
</div>
<footer><%= @current_user.inspect %></footer>
</html>
